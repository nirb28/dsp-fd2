{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "manifest_version": "1.0",
  "project_id": "test-apisix-project",
  "project_name": "Test APISIX Project",
  "environment": "development",
  "description": "Test project for APISIX integration and project organization",
  "metadata": {
    "created_at": "2024-01-15T10:00:00Z",
    "updated_at": "2024-01-15T10:00:00Z",
    "owner": "dsp-team",
    "tags": ["test", "apisix", "gateway"]
  },
  "modules": [
    {
      "name": "test-apisix-gateway",
      "module_type": "api_gateway",
      "description": "APISIX API Gateway for test project",
      "config": {
        "upstreams": [
          {
            "name": "test-backend",
            "type": "roundrobin",
            "nodes": {
              "localhost:8081": 1,
              "localhost:8082": 1
            },
            "timeout": {
              "connect": 30,
              "send": 30,
              "read": 30
            }
          }
        ],
        "routes": [
          {
            "name": "test-api",
            "uri": "/api/*",
            "methods": ["GET", "POST", "PUT", "DELETE"],
            "plugins": [
              {
                "name": "jwt-auth",
                "enabled": true,
                "config": {
                  "header": "Authorization",
                  "cookie": "jwt"
                }
              },
              {
                "name": "limit-req",
                "enabled": true,
                "config": {
                  "rate": 100,
                  "burst": 50,
                  "key": "remote_addr"
                }
              },
              {
                "name": "cors",
                "enabled": true,
                "config": {
                  "allow_origins": "*",
                  "allow_methods": "*",
                  "allow_headers": "*"
                }
              }
            ]
          },
          {
            "name": "test-health",
            "uri": "/health",
            "methods": ["GET"],
            "plugins": []
          }
        ],
        "global_plugins": [
          {
            "name": "prometheus",
            "enabled": true,
            "config": {
              "prefer_name": true
            }
          }
        ],
        "streaming_enabled": false
      }
    },
    {
      "name": "test-jwt-auth",
      "module_type": "jwt_config",
      "description": "JWT authentication configuration",
      "config": {
        "secret_key": "test-secret-key-12345",
        "algorithm": "HS256",
        "expiration_minutes": 60,
        "issuer": "test-apisix-project",
        "audience": "test-api"
      }
    }
  ]
}

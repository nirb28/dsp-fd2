# Environment Configuration
ENV=development

# Service URLs
CONTROL_TOWER_URL=http://localhost:8081
VAULT_URL=http://localhost:8200
JWT_SERVICE_URL=http://localhost:8082
REDIS_URL=redis://localhost:6379/0
RAG_SERVICE_URL=http://localhost:8083

# Security
VAULT_TOKEN=root
JWT_SECRET_KEY=your-secret-key-change-in-production
API_KEY_SECRET=your-api-key-secret

# Server Configuration
PORT=8080
WORKERS=4
LOG_LEVEL=INFO

# Cache Configuration
CACHE_TTL_SECONDS=300
MANIFEST_CACHE_TTL=600

# Module Pool Configuration
MODULE_POOL_SIZE=10
MODULE_HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Timeouts (in seconds)
REQUEST_TIMEOUT=30
MODULE_LOAD_TIMEOUT=10
HEALTH_CHECK_TIMEOUT=5

# Database (optional, for audit logs)
DATABASE_URL=postgresql://user:password@localhost:5432/dsp_fd2

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
PROMETHEUS_PORT=9090
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Development Settings
RELOAD=true
DEBUG=false

# Cors Settings
CORS_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# APISIX Configuration
AUTO_CONFIGURE_APISIX=false
APISIX_ADMIN_URL=http://apisix:9180
APISIX_ADMIN_KEY=edd1c9f034335f136f87ad84b625c8f1
APISIX_GATEWAY_URL=http://apisix:9080

# Feature Flags
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_MODULE_VALIDATION=true
ENABLE_REQUEST_VALIDATION=true
ENABLE_RESPONSE_VALIDATION=false

# Module Loading
MODULE_AUTO_RELOAD=false
MODULE_SANDBOX_ENABLED=true
MODULE_MAX_MEMORY_MB=512
MODULE_MAX_CPU_SECONDS=30

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30
DRAIN_CONNECTIONS_ON_SHUTDOWN=true
